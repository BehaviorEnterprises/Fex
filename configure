#!/bin/bash

platform=$(uname)
[[ -n $1 ]] && platform=$1
platform=${platform,,}

case $platform in
	Linux|linux)
		target="linux"
		;;
#	mac|osx) target="mac" ;;
#	win|win95) target="win" ;;
	*)
		echo "Only the linux version is currently functional"
		exit
		;;
esac

sed 's/^'$target'_//' src/Makefile.in > Makefile

